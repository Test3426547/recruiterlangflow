{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Langflow",
            "type": "shell",
            "command": "cd agents && python -m langflow run --env-file .env --components-path ./components --host 0.0.0.0",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Starting Langflow.*",
                    "endsPattern": ".*Access http://.*"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "clear": true
            }
        }
    ]
}